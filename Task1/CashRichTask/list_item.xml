<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="7dp"
    tools:layout_editor_absoluteX="5dp">

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="57dp"
        android:layout_height="51dp"
        app:srcCompat="@drawable/hdfc"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="7dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="149dp"
        android:layout_height="18dp"
        android:text="TextView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toLeftOf="@+id/switch1"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/fund"
        android:layout_width="283dp"
        android:layout_height="24dp"
        android:text="TextView"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/name"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Withdrawal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/current"
        android:layout_width="124dp"
        android:layout_height="19dp"
        android:text="Current Value"
        tools:layout_editor_absoluteY="92dp"
        tools:layout_editor_absoluteX="7dp" />

    <ImageView
        android:id="@+id/currency"
        android:layout_width="16dp"
        android:layout_height="19dp"
        android:src="@drawable/ic_euro_symbol_black_24dp"
        tools:layout_editor_absoluteY="119dp"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/currentValue"
        android:layout_width="102dp"
        android:layout_height="21dp"
        android:text="TextView"
        tools:layout_editor_absoluteY="118dp"
        tools:layout_editor_absoluteX="30dp" />

    <TextView
        android:id="@+id/withdrawal"
        android:layout_width="133dp"
        android:layout_height="20dp"
        android:text="Withdrawal Amount"
        tools:layout_editor_absoluteY="92dp"
        tools:layout_editor_absoluteX="233dp" />

    <EditText
        android:id="@+id/withdrawal_amt"
        android:layout_width="132dp"
        android:layout_height="19dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteY="120dp"
        tools:layout_editor_absoluteX="234dp" />
</android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>